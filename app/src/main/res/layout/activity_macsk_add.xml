<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="20dp"
    android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/cat_name_edit_text"
            android:paddingTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/name_of_the_cat"
            android:inputType="text"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/cat_category_edit_text"
            android:paddingTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/category"
            android:inputType="text"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/cat_description_edit_text"
            android:paddingTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/description_of_the_cat"
            android:inputType="textMultiLine"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/cat_contact_edit_text"
            android:paddingTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/contact"
            android:inputType="number"/>




        <Button
            android:id="@+id/add_new_cat_button"
            android:background="#1351D8"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/save"/>

    </LinearLayout>
</ScrollView>